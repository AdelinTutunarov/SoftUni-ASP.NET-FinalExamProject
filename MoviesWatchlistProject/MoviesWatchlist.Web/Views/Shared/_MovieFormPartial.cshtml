@model AddMovieViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title..." aria-required="true">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseYear"></label>
                <input type="number" asp-for="ReleaseYear" class="form-control" placeholder="Release Year..." aria-required="true">
                <span asp-validation-for="ReleaseYear" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Rating" class="form-label">Rating</label>
                <input type="number" asp-for="Rating" class="form-control" value="" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgURL"></label>
                <input asp-for="ImgURL" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImgURL" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectorId">Select Director:</label>
                <select asp-for="DirectorId" class="form-control">
                    @foreach (var director in Model.Directors)
                    {
                        <option value="@director.Id">@director.FullName</option>
                    }
                </select>
                <span asp-validation-for="DirectorId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WritersIds" >Select Writers:</label>
                <select asp-for="WritersIds" multiple="multiple" class="listbox" required>
                    @foreach (var writer in Model.Writers)
                    {
                        <option value="@writer.Id">@writer.FullName</option>
                    }
                </select>
                <span asp-validation-for="WritersIds" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActorsIds">Select Actors:</label>
                <select asp-for="ActorsIds" multiple="multiple" class="listbox" required>
                    @foreach (var actor in Model.Actors)
                    {
                            <option value="@actor.Id">@actor.FullName</option>
                    }
                </select>
                <span asp-validation-for="ActorsIds" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenresIds">Select Genres:</label>
                <select asp-for="GenresIds" multiple="multiple" class="listbox" required>
                    @foreach (var genre in Model.Genres)
                    {
                                <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
                <span asp-validation-for="GenresIds" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href=" https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
<link href=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
<script src=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $('.listbox').multiselect({
            includeSelectAllOption: true
        });
    });
</script>
