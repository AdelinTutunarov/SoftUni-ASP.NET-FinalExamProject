@model List<AllMovieViewModel>
@{
    ViewData["Title"] = "My Movies";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr/>

@if (!Model.Any())
{
    <h2 class="text-center">You do not have any movies in your watchlist yet!</h2>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <partial name="_MoviePartial" model="movie"/>
        }
    </div>
}
